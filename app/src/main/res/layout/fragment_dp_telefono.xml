<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dp_telefono">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/idTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorLetra"
        android:background="@color/colorRojo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I. DATOS PERSONALES"
        android:textColor="@color/colorLetra"
        android:background="@color/colorRojo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="1.06 ¿Puedes anotar tu número de teléfono?" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fijo"
             />


        <EditText
            android:id="@+id/txtFijo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Celular"
            />


        <EditText
            android:id="@+id/txtCelular"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="number" />

    </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="1.07 ¿Cual es tu estado civil?" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="100dp"
                >

                <RadioButton
                    android:id="@+id/soltera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Soltera (o)" />

                <RadioButton
                    android:id="@+id/casada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casada (o)" />

                <RadioButton
                    android:id="@+id/concubinato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Concubinato" />


                <RadioButton
                    android:id="@+id/divorciada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Divorciada (o)" />


                <RadioButton
                    android:id="@+id/viuda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viuda (o)" />


                <RadioButton
                    android:id="@+id/separada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Separada(o)" />


                <RadioButton
                    android:id="@+id/padreSoltero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Padre Soltero" />


                <RadioButton
                    android:id="@+id/madreSoltera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Madre Soltera" />


                <RadioButton
                    android:id="@+id/otroEstadoCivil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otro/no sabe/no responde" />
            </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="1.07.01 ¿Tiene hijos o hijas?" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="100dp"
        >

        <RadioButton
            android:id="@+id/SiHijos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Si" />

        <RadioButton
            android:id="@+id/NoHijos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/layout1702"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="1.07.02 ¿Cuántos?" />


        <EditText
            android:id="@+id/txtnumHijos"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:inputType="number" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"

        android:layout_marginBottom="15dp">


        <Button
            android:id="@+id/btnAtras5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="ATRAS"
            android:textColor="@color/colorLetra" />

        <Button
            android:id="@+id/btnSiguiente5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:background="@color/botonSig"
            android:layout_weight="1"
            android:text="SIGUIENTE"
            android:textColor="@color/colorLetra" />


    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>