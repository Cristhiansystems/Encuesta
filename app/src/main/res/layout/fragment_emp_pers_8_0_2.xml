            <RadioButton
                android:id="@+id/NoTomoCuenLaOpinDeOtraPersQSabeElTema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
