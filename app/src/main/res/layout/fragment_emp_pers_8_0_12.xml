<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".emp_pers_8_0_12">

    <!-- TODO: Update blank fragment layout -->
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XII EMPODERAMIENTO PERSONAL"
        android:textColor="@color/colorLetra"
        android:background="@color/colorRojo"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="8.12 ¿Cuál es la razón principal por la que dejaste de estudiar?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp">



            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RadioButton
                    android:id="@+id/RdCuidadoHijos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:text="Cuidado de hijos/as -/hermanos/as" />

                <RadioButton
                    android:id="@+id/RdTrabajo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Trabajo" />

                <RadioButton
                    android:id="@+id/RdParejaNoestabaDeAcuerdo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Mi pareja no estaba de acuerdo" />
                <RadioButton
                    android:id="@+id/RdEmbarazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Embarazo" />
                <RadioButton
                    android:id="@+id/RdFaltaRecursosEconomicos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Falta de recursos económicos" />
                <RadioButton
                    android:id="@+id/RdOtro8.12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Otro (Especificar)" />

            </RadioGroup>



    </LinearLayout>


    <EditText
        android:id="@+id/txtOtro8.12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:hint="Resp..."
        android:lines="2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:text="8.13 ¿Tienes planificado volver a estudiar?" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/OtroSi8.13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="SI" />

        <RadioButton
            android:id="@+id/OtroNo8.13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NO" />
    </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"

        android:layout_marginBottom="15dp">
        >

        <Button
            android:id="@+id/btnAtras44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="ATRAS"
            android:textColor="@color/colorLetra" />

        <Button
            android:id="@+id/btnSiguiente44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:background="@color/botonSig"
            android:layout_weight="1"
            android:text="SIGUIENTE"
            android:textColor="@color/colorLetra" />


    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>