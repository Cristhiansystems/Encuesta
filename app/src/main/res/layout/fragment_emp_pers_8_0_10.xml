<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".emp_pers_8_0_10">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/idemppers810"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorLetra"
        android:background="@color/colorRojo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XII EMPODERAMIENTO PERSONAL"
        android:textColor="@color/colorLetra"
        android:background="@color/colorRojo"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="8.10 ¿Hasta qué nivel piensas estudiar?" />
   <RadioGroup
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="60dp"
       >
        <RadioButton
            android:id="@+id/RdPri810"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1.5"
            android:text="Primaria"/>



        <RadioButton
            android:id="@+id/RdSec810"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1.5"
            android:text="Secundaria"/>


        <RadioButton
            android:id="@+id/RdNorPolMil810"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Normal/ policia/ militar" />


        <RadioButton
            android:id="@+id/RdUni810"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Universitaria"/>


        <RadioButton
            android:id="@+id/RdTecUni810"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Técnico universitario"/>


        <RadioButton
            android:id="@+id/RdTecMed810"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Técnico medio"/>


        <RadioButton
            android:id="@+id/RdOtro810"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Otro (especificar)"/>

       <EditText
           android:id="@+id/txtResp810"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="(especificar)"
           android:lines="2"/>

   </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"

        android:layout_marginBottom="15dp">
        >

        <Button
            android:id="@+id/btnAtras43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="ATRAS"
            android:textColor="@color/colorLetra" />

        <Button
            android:id="@+id/btnSiguiente43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:background="@color/botonSig"
            android:layout_weight="1"
            android:text="SIGUIENTE"
            android:textColor="@color/colorLetra" />


    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>